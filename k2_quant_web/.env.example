# K2 Quant Web Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Database Configuration
# ===================
DATABASE_URL=postgresql://k2quant:k2quant_secure_password@localhost:5432/k2quant_web

# ===================
# Redis Configuration
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# API Keys
# ===================
# Get your Polygon API key from https://polygon.io
POLYGON_API_KEY=your_polygon_api_key_here

# OpenAI API key for AI chat (optional)
# Get from https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API key for Claude integration (optional)
# Get from https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===================
# Security
# ===================
# Generate a secure secret key:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# JWT token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# ===================
# CORS Configuration
# ===================
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ===================
# Application Settings
# ===================
DEBUG=false
LOG_LEVEL=INFO
ENABLE_AGENTS=true

# ===================
# Performance Settings
# ===================
MAX_PARALLEL_FETCHES=50
DEFAULT_CHUNK_SIZE=100000
CACHE_TTL=3600  # 1 hour
MAX_WORKERS=4

# ===================
# File Storage
# ===================
UPLOAD_DIR=/tmp/k2quant/uploads
EXPORT_DIR=/tmp/k2quant/exports
LOG_DIR=/tmp/k2quant/logs

# ===================
# WebSocket Settings
# ===================
WS_MESSAGE_QUEUE_SIZE=100
WS_HEARTBEAT_INTERVAL=30

# ===================
# Agent System
# ===================
AGENT_TASK_TIMEOUT=300  # 5 minutes

# ===================
# Frontend Settings (for React app)
# ===================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000